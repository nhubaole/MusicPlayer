<Window x:Class="MusicPlayer.PasswordChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:MusicPlayer.UserControls"
        Height="650" Width="450" 
        Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <uc:ControlBar></uc:ControlBar>
        </Grid>

        <Grid Grid.Row="1" Background="{StaticResource SecondaryMid}" Grid.ColumnSpan="4" >
            <materialDesign:Card  HorizontalAlignment="Center" VerticalAlignment="Top" Background="Transparent" Margin="0,46,0,0">
                <TextBlock Text="ĐỔI MẬT KHẨU" FontSize="38" Foreground="{StaticResource SecondaryLight}" FontWeight="Bold" ></TextBlock>
            </materialDesign:Card>

            <materialDesign:Card HorizontalAlignment="Center" Width="318" Background="Transparent" Margin="0,140,0,241">
                <Grid Margin="0,0,0,-57">

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBox
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Height="64"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Nhập mật khẩu cũ"
                                materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PrimaryMid}"
                                
                                materialDesign:HintAssist.Background="{StaticResource SecondaryMid}"
                                materialDesign:HintAssist.Foreground="{StaticResource SecondaryLight}"
                                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}" FontSize="22" BorderBrush="{DynamicResource PrimaryMid}" Foreground="{DynamicResource SecondaryLight}" >

                            </TextBox>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <StackPanel>
                            <TextBox
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Height="64"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Nhập mật khẩu mới" 
                                materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PrimaryMid}"
                               
                                materialDesign:HintAssist.Background="{StaticResource SecondaryMid}"
                                materialDesign:HintAssist.Foreground="{StaticResource SecondaryLight}"
                                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}" FontSize="22" Foreground="{DynamicResource SecondaryLight}" BorderBrush="{DynamicResource PrimaryMid}" />
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2">
                        <StackPanel>
                            <TextBox
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Height="64"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Nhập lại mật khẩu mới"
                                materialDesign:HintAssist.Background="{StaticResource SecondaryMid}"
                                materialDesign:HintAssist.Foreground="{StaticResource SecondaryLight}"
                                
                                materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PrimaryMid}"
                                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}" FontSize="22" Foreground="{DynamicResource SecondaryLight}" BorderBrush="{DynamicResource PrimaryMid}" />
                        </StackPanel>
                    </Grid>
                </Grid>

            </materialDesign:Card>

            <materialDesign:Card HorizontalAlignment="Center"  Background="Transparent" Margin="0,406,0,46" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" >
                        <Button
                            HorizontalAlignment="Center"   
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Content="LƯU" 
                            Height="45"
                            Width="120"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" FontSize="22" Background="{DynamicResource PrimaryLight}" Foreground="{DynamicResource PrimaryDark}" FontWeight="Bold" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <Button                            
                            Height="45"
                            Width="120"
                            Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"  
                            ToolTip="Resource name: MaterialDesignPaperSecondaryLightButton"
                            HorizontalAlignment="Center"  
                            Content="THOÁT"
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource PrimaryLight}" Background="{DynamicResource SecondaryMid}" BorderBrush="{DynamicResource PrimaryMid}" />
                    </Grid>

                </Grid>

            </materialDesign:Card>


        </Grid>

    </Grid>
</Window>
