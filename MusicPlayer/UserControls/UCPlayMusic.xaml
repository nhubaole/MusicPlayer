<UserControl x:Class="MusicPlayer.UserControls.UCPlayMusic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MusicPlayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="68" d:DesignWidth="920"  >
    <Grid>
        <Border CornerRadius ="40,0,40,0" Background= "{ StaticResource PrimaryLight}"/>

        <Button
          x:Name="btRepeat"
          Style="{StaticResource MaterialDesignIconButton}"
          Background="Transparent"
          Width="40" Height="40" 
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
          Margin="220,0,0,0">
            <materialDesign:PackIcon
                Kind="Repeat" 
                Width="30" 
                Height="30" 
                RenderTransformOrigin="0.5,1.2"  
                HorizontalAlignment="Left"   
                VerticalAlignment="Center"
                Foreground="{StaticResource SecondaryDark}"/>
        </Button>
        <Button
            x:Name="btSkipPrevious"
          Style="{StaticResource MaterialDesignIconButton}"
          Background="Transparent"
          Width="40" Height="40" 
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
          Margin="260,0,0,0">
            <materialDesign:PackIcon
                Kind="SkipPrevious" 
                Width="40" 
                Height="40" 
                RenderTransformOrigin="0.75,1" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Center"
                Foreground="{StaticResource SecondaryDark}"/>
        </Button>
        

        <Button
            x:Name="btPlay"
          Style="{StaticResource MaterialDesignIconButton}"
          Background="{StaticResource SecondaryLight}"
          Width="50" 
          Height="50" 
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
            Margin="310,0,0,0">
            <materialDesign:PackIcon 
                Kind="Play"
                Width="40"
                Height="40" 
                RenderTransformOrigin="0.75,1" />
        </Button>

        <Button
            x:Name="btSkipNext"
          Style="{StaticResource MaterialDesignIconButton}"
          Background="Transparent"
          Width="40" Height="40" 
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
          Margin="370,0,0,0">
            <materialDesign:PackIcon
                Kind="SkipNext" 
                Width="40" 
                Height="40" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Center"
                Foreground="{StaticResource SecondaryDark}"/>
        </Button>

        <Button
            x:Name="btShuffleVariant"
          Style="{StaticResource MaterialDesignIconButton}"
          Background="Transparent"
          Width="40" Height="40" 
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
          Margin="420,0,0,0">
            <materialDesign:PackIcon
                Kind="ShuffleVariant" 
                Width="30" 
                Height="30" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Center"
                Foreground="{StaticResource SecondaryDark}"/>
        </Button>
        <Border 
            Height="50"
            Width="50" 
            HorizontalAlignment="Left" 
            Margin="25,0,0,0 " 
            CornerRadius="10,10,10,10" 
            Background="{StaticResource SecondaryDark}"/>
        <TextBlock
            x:Name="tbSong"
            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
            Text="Tên bài hát"
            Foreground="{StaticResource SecondaryDark}"
            Width="120" Height="30"
            FontSize="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontWeight="SemiBold"
            Margin="85,-20,0,0"/>
        <TextBlock
            x:Name="tbSinger"
            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
            Text="Tên ca sĩ"
            Foreground="{StaticResource SecondaryDark}"
            Width="120" Height="20"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontWeight="Regular"
            Margin="85,25,0,0"/>
        
        <TextBlock
            x:Name="tbPlayTime"
            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
            Text="1:00"
            Foreground="{StaticResource SecondaryDark}"
            Width="40" Height="30"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="465,5,0,0"/>
        <TextBlock
            x:Name="tbTime"
            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
            Text="3:00"
            Foreground="{StaticResource SecondaryDark}"
            Width="40" Height="30"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="735,5,0,0"/>

        <Slider 
            x:Name="slPlay"
            Minimum="0" 
            Maximum="50"
            Value="35" 
            HorizontalAlignment="Left" 
            Margin="510,0,0,0" 
            Width="220" 
            VerticalAlignment="Center" 
            Foreground="{StaticResource SecondaryDark}"/>
        <materialDesign:PackIcon Kind="VolumeHigh" Width ="30" Height="30"  Margin="780,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{StaticResource SecondaryDark}" />
        <Slider 
            x:Name="slVolume"
            Minimum="0" 
            Maximum="50" 
            Value="35" 
            HorizontalAlignment="Left"
            Margin="815,0,0,0" 
            Width="70" 
            VerticalAlignment="Center"
            Foreground="{StaticResource SecondaryDark}"/>
        <Button
          x:Name="btThreePoint"
          Style="{StaticResource MaterialDesignIconButton}"
          Background="Transparent"
          Width="20" Height="30" 
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
          Margin="890,0,0,0" >
            <materialDesign:PackIcon
                Kind="DotsVertical" 
                Width="30" 
                Height="40" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Center"
                Foreground="{StaticResource SecondaryDark}"/>
        </Button>

    </Grid>
</UserControl>
