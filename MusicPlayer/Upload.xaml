<Window x:Class="MusicPlayer.Upload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MusicPlayer" 
        xmlns:uc="clr-namespace:MusicPlayer.UserControls"
        mc:Ignorable="d"
        Title="Upload" 
        Height="450" 
        Width="800"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <Grid>
        <Border CornerRadius="40" Background="{StaticResource SecondaryDark}"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition ></RowDefinition>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <uc:ControlBar/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"     
                        Width="200"
                        Height="200" 
                        BorderBrush="Transparent"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Margin="50,70,50,140" Click="Button_Click">
                    <Button.Background>
                        <ImageBrush 
                            ImageSource="/Resource/Images/ImgUp.png" 
                            Stretch="UniformToFill"/>
                    </Button.Background>
                </Button>
                <Grid Grid.Column="1" Margin="10,0,-10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="80"></RowDefinition>
                        <RowDefinition Height="80"></RowDefinition>
                        <RowDefinition Height="70"></RowDefinition>
                        <RowDefinition Height="60" ></RowDefinition>
                        <RowDefinition Height="60"   ></RowDefinition>

                    </Grid.RowDefinitions>

                    <TextBlock 
                        Text="TẢI BÀI HÁT LÊN"
                        FontSize="23"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="{StaticResource SecondaryLight}" 
                        FontFamily="Bahnschrift" Margin="130,0,0,0"/>
                    <TextBlock 
                        Grid.Row="1"
                        Text="Tên bài hát"
                        Height="30"
                        Foreground="{StaticResource PrimaryMid}"
                        FontWeight="Bold"
                        FontSize="18"
                        Margin="0,3,0,40"/>
                    <TextBox 
                        Grid.Row="1"
                        Text="Nhập tên ở đâyyyyyyyyyyyyyy"
                        Height="40"
                        Foreground="{StaticResource SecondaryLight}"
                        FontSize="17"
                        Margin="0,35,100,5"/>
                    <TextBlock 
                        Grid.Row="2"
                        Text="Tên ca sĩ"
                        Height="30"
                        FontWeight="Bold"
                        Foreground="{StaticResource PrimaryMid}"
                        FontSize="18"
                        Margin="0,3,0,40"/>
                    <TextBox 
                        Grid.Row="2"
                        Text="Nhập tên ở đâyyyyyyyyyyyyyy"
                        Height="40"
                        Foreground="{StaticResource SecondaryLight}"
                        FontSize="17"
                        Margin="0,35,100,5"/>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="1"
                            Text="Thời lượng"
                            Foreground="{StaticResource PrimaryMid}"
                            FontWeight="Bold"
                            FontSize="18"
                            Margin="0,5,0,37"/>
                        <TextBox
                            Grid.Column="1"
                            Text="Nhập thời lượng"
                            Foreground="{StaticResource SecondaryLight}"
                            FontSize="15"
                            Width="150"
                            Margin="0,35,100,0"/>
                        <TextBlock
                            Grid.Column="0"
                            Text="Ngày phát hành"
                            Foreground="{StaticResource PrimaryMid}"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="0,5,0,34"/>
                        <DatePicker
                            Grid.Column="0"
                            Width="150"
                            Height="48"
                            FontSize="15"
                            Foreground="BlueViolet"
                            materialDesign:HintAssist.Hint="Chọn ngày"
                            HorizontalAlignment="Left"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                            VerticalAlignment="Bottom" />
                    </Grid>

                    <Grid
                        Grid.Row="4">
                        <Button
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Height="34"
                        Width="130"
                        Background="{StaticResource PrimaryLight}"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        BorderBrush="Transparent"
                        ToolTip="MaterialDesignRaisedLightButton with Round Corners"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Margin="140,26,230,0">
                            <TextBlock
                                Text="TẢI LÊN" 
                                FontSize="15" 
                                Height="30" 
                                Width="100" 
                                FontWeight="Bold" 
                                Margin="20,3,0,0">
                            </TextBlock>
                        </Button>
                    </Grid>
                    <Button
                        Grid.Row="5"
                        BorderThickness="2"
                        Height="35"
                        BorderBrush="{StaticResource PrimaryMid}"
                        Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}"
                        Content="THOÁT"
                        Foreground="{StaticResource PrimaryLight}"
                        FontSize="15"
                        FontWeight="Bold"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Margin="140,10,232,15" Panel.ZIndex="-1" >
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
